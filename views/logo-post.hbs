function handleOperationChange(e) {
    const operation = e.target.value;
    const forms = document.querySelectorAll('.operation-form');
    
    // TÃ¼m formlarÄ± gizle ve required attribute'leri kaldÄ±r
    forms.forEach(form => {
        form.style.display = 'none';
        // Gizli formlardaki required alanlarÄ± deaktif et
        form.querySelectorAll('[required]').forEach(input => {
            input.removeAttribute('required');
            input.setAttribute('data-was-required', 'true');
        });
    });
    
    // Aktif formu gÃ¶ster ve required attribute'leri geri ekle
    const activeForm = document.getElementById(operation + 'Form');
    activeForm.style.display = 'block';
    activeForm.querySelectorAll('[data-was-required]').forEach(input => {
        input.setAttribute('required', 'required');
    });
    
    // Custom JSON iÃ§in Ã¶rnek veri yÃ¼kle
    if (operation === 'custom') {
        loadCustomExample();
    }
}

function loadCustomExample() {
